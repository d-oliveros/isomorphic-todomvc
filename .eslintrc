---
parser: babel-eslint
extends: airbnb/base
env:
  mocha: true
rules:
  indent:
    - 2
    - 2
    - SwitchCase: 1
  comma-dangle:
    - 2
    - never
  no-use-before-define:
    - 2
    - nofunc
  consistent-return:
    - 0
  padded-blocks:
    - 0
  func-names:
    - 0
  no-shadow:
    - 0
  no-param-reassign:
    - 0
  key-spacing:
    - 0
  no-loop-func:
    - 0
  no-console:
    - 0
  no-nested-ternary:
    - 0
  jsx-quotes:
    - 1
    - "prefer-single"
  object-shorthand:
    - 0
  no-empty:
    - 0
